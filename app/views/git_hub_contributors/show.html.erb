<h4>
  <%= link_to root_path do %>
    <span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home
  <% end %>
</h4>
<h1>Contributor <%= @username %></h1>
<div class="col-3 float-left pr-3">
  <%= @profile[:avatar].html_safe %>
  <h3><%= link_to 'GitHub Profile', @profile[:url], target: '_blank' %></h3>
</div>
<div class="col-9 float-left pl-2">
  
  <%= @profile[:contribution_graph].html_safe %>
  <table class="table table-bordered">
    <tr><th></th><th>Average</th><th>Total</th></tr>
    <tr><td>Last 7 days</td><td><%= (@profile[:last_week_total].to_f/7).round(1) %></td><td><%= @profile[:last_week_total] %></td></tr>
    <tr><td>Last 30 days</td><td><%= (@profile[:last_month_total].to_f/30).round(1) %></td><td><%= @profile[:last_month_total] %></td></tr>
    <tr><td>Last <%= @profile[:total_days] %> days</td><td><%= (@profile[:last_year_total].to_f/@profile[:total_days]).round(1) %></td><td><%= @profile[:last_year_total] %></td></tr>
  </table>
</div>